{
  "name": "dispersa",
  "version": "0.1.0",
  "description": "A TypeScript library for processing DTCG design tokens with resolver support",
  "private": true,
  "type": "module",
  "scripts": {
    "sync:readme": "cp README.md packages/core/README.md",
    "build": "pnpm run sync:readme && pnpm --filter './packages/**' -r build",
    "build:examples": "pnpm install && pnpm --filter './examples/**' -r build",
    "test": "pnpm -r test",
    "test:update": "pnpm -r test:update",
    "dev": "pnpm -r dev",
    "dev:docs": "pnpm -C apps/docs dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm -r publish --access public --no-git-checks"
  },
  "keywords": [
    "design-tokens",
    "dtcg",
    "css",
    "tokens"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.3",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
