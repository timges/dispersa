{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "dispersa": ["index.ts"],
      "@cli/*": ["cli/*"],
      "@codegen/*": ["codegen/*"],
      "@tokens/*": ["tokens/*"],
      "@processing/*": ["processing/*"],
      "@resolution/*": ["resolution/*"],
      "@validation/*": ["validation/*"],
      "@build/*": ["build/*"],
      "@renderers/*": ["renderers/*"],
      "@adapters/*": ["adapters/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@lint/*": ["lint/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "src/legacy-structure"]
}
