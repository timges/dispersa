{
  "number": {
    "$description": "Base numeric values used throughout the design system",
    "scale": {
      "small": {
        "$type": "number",
        "$value": 0.75,
        "$description": "Small scale multiplier"
      },
      "normal": {
        "$type": "number",
        "$value": 1,
        "$description": "Normal scale (100%)"
      },
      "large": {
        "$type": "number",
        "$value": 1.5,
        "$description": "Large scale multiplier"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": 1.25,
        "$description": "Tight line height for headings"
      },
      "normal": {
        "$type": "number",
        "$value": 1.5,
        "$description": "Normal line height for body text"
      },
      "loose": {
        "$type": "number",
        "$value": 1.75,
        "$description": "Loose line height for relaxed reading"
      }
    },
    "opacity": {
      "subtle": {
        "$type": "number",
        "$value": 0.1,
        "$description": "Very subtle opacity"
      },
      "light": {
        "$type": "number",
        "$value": 0.3,
        "$description": "Light opacity"
      },
      "medium": {
        "$type": "number",
        "$value": 0.5,
        "$description": "Medium opacity"
      },
      "strong": {
        "$type": "number",
        "$value": 0.8,
        "$description": "Strong opacity"
      },
      "full": {
        "$type": "number",
        "$value": 1,
        "$description": "Full opacity"
      }
    }
  },
  "duration": {
    "$description": "Animation and transition durations",
    "instant": {
      "$type": "duration",
      "$value": { "value": 0, "unit": "ms" },
      "$description": "Instant - no animation"
    },
    "fast": {
      "$type": "duration",
      "$value": { "value": 150, "unit": "ms" },
      "$description": "Fast transitions for small changes"
    },
    "normal": {
      "$type": "duration",
      "$value": { "value": 300, "unit": "ms" },
      "$description": "Normal transition speed"
    },
    "slow": {
      "$type": "duration",
      "$value": { "value": 500, "unit": "ms" },
      "$description": "Slow transitions for larger movements"
    },
    "slower": {
      "$type": "duration",
      "$value": { "value": 1000, "unit": "ms" },
      "$description": "Very slow transitions"
    }
  },
  "easing": {
    "$description": "Cubic bezier easing functions for animations",
    "linear": {
      "$type": "cubicBezier",
      "$value": [0, 0, 1, 1],
      "$description": "Linear easing - constant speed"
    },
    "ease": {
      "$type": "cubicBezier",
      "$value": [0.25, 0.1, 0.25, 1],
      "$description": "Default ease - slow start and end"
    },
    "easeIn": {
      "$type": "cubicBezier",
      "$value": [0.42, 0, 1, 1],
      "$description": "Ease in - slow start"
    },
    "easeOut": {
      "$type": "cubicBezier",
      "$value": [0, 0, 0.58, 1],
      "$description": "Ease out - slow end"
    },
    "easeInOut": {
      "$type": "cubicBezier",
      "$value": [0.42, 0, 0.58, 1],
      "$description": "Ease in-out - slow start and end"
    },
    "spring": {
      "$type": "cubicBezier",
      "$value": [0.34, 1.56, 0.64, 1],
      "$description": "Spring-like bouncy easing"
    },
    "smooth": {
      "$type": "cubicBezier",
      "$value": [0.4, 0, 0.2, 1],
      "$description": "Smooth acceleration curve"
    }
  }
}
