{
  "$description": "Semantic color aliases - references to base color palette",
  "color": {
    "semantic": {
      "$description": "Purpose-driven color tokens",
      "primary": {
        "$type": "color",
        "$value": "{color.base.blue}",
        "$description": "Primary action color"
      },
      "success": {
        "$type": "color",
        "$value": "{color.base.green}",
        "$description": "Success and positive states"
      },
      "error": {
        "$type": "color",
        "$value": "{color.base.red}",
        "$description": "Error and destructive states"
      },
      "warning": {
        "$type": "color",
        "$value": "{color.base.orange}",
        "$description": "Warning and caution states"
      },
      "text": {
        "$type": "color",
        "$value": "{color.base.gray-900}",
        "$description": "Primary text color"
      },
      "text-muted": {
        "$type": "color",
        "$value": "{color.base.gray-500}",
        "$description": "Secondary/muted text color"
      },
      "background": {
        "$type": "color",
        "$value": "{color.base.white}",
        "$description": "Page background"
      },
      "surface": {
        "$type": "color",
        "$value": "{color.base.gray-100}",
        "$description": "Elevated surface (cards, panels)"
      },
      "border": {
        "$type": "color",
        "$value": "{color.base.gray-300}",
        "$description": "Default border color"
      }
    }
  }
}
