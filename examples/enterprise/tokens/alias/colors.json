{
  "$description": "Semantic color roles",
  "color": {
    "alias": {
      "text": {
        "primary": {
          "$type": "color",
          "$value": "{color.base.gray.900}",
          "$description": "Primary text color"
        },
        "secondary": {
          "$type": "color",
          "$value": "{color.base.gray.600}",
          "$description": "Secondary text color"
        },
        "tertiary": {
          "$type": "color",
          "$value": "{color.base.gray.400}",
          "$description": "Tertiary text color"
        },
        "inverse": {
          "$type": "color",
          "$value": "{color.base.white}",
          "$description": "Inverse text (on dark backgrounds)"
        }
      },
      "background": {
        "primary": {
          "$type": "color",
          "$value": "{color.base.white}",
          "$description": "Primary background"
        },
        "secondary": {
          "$type": "color",
          "$value": "{color.base.gray.50}",
          "$description": "Secondary background"
        },
        "tertiary": {
          "$type": "color",
          "$value": "{color.base.gray.100}",
          "$description": "Tertiary background"
        },
        "inverse": {
          "$type": "color",
          "$value": "{color.base.gray.900}",
          "$description": "Inverse background (dark)"
        }
      },
      "interactive": {
        "primary": {
          "$type": "color",
          "$value": "{color.base.brand.primary}",
          "$description": "Primary interactive color"
        },
        "hover": {
          "$type": "color",
          "$value": "{color.base.interactive.hover}",
          "$description": "Hover state"
        },
        "active": {
          "$type": "color",
          "$value": "{color.base.interactive.active}",
          "$description": "Active state"
        }
      },
      "success": {
        "$type": "color",
        "$value": "{color.base.semantic.success}"
      },
      "warning": {
        "$type": "color",
        "$value": "{color.base.semantic.warning}"
      },
      "danger": {
        "$type": "color",
        "$value": "{color.base.semantic.danger}"
      },
      "info": {
        "$type": "color",
        "$value": "{color.base.semantic.info}"
      },
      "border": {
        "default": {
          "$type": "color",
          "$value": "{color.base.gray.200}",
          "$description": "Default border color"
        },
        "strong": {
          "$type": "color",
          "$value": "{color.base.gray.500}",
          "$description": "Prominent border"
        },
        "subtle": {
          "$type": "color",
          "$value": "{color.base.gray.100}",
          "$description": "Subtle border"
        }
      }
    }
  }
}
