{
  "$description": "Input component tokens",
  "color": {
    "input": {
      "background": {
        "$type": "color",
        "$value": "{color.alias.background.primary}"
      },
      "border": {
        "$type": "color",
        "$root": { "$value": "{color.alias.border.default}" },
        "focus": { "$value": "{color.alias.interactive.primary}" }
      },
      "text": {
        "$type": "color",
        "$value": "{color.alias.text.primary}"
      },
      "placeholder": {
        "$type": "color",
        "$value": "{color.alias.text.tertiary}"
      }
    }
  },
  "spacing": {
    "input": {
      "padding": {
        "$type": "dimension",
        "$value": "{spacing.alias.sm}"
      }
    }
  }
}
