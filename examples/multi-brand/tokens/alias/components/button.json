{
  "$description": "Button component tokens",
  "color": {
    "button": {
      "primary": {
        "background": {
          "$type": "color",
          "$root": { "$value": "{color.alias.interactive.primary}" },
          "hover": { "$value": "{color.alias.interactive.hover}" },
          "active": { "$value": "{color.alias.interactive.active}" }
        },
        "text": {
          "$type": "color",
          "$value": "{color.alias.text.inverse}"
        }
      },
      "secondary": {
        "background": {
          "$type": "color",
          "$value": "{color.alias.background.secondary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.alias.border.default}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.alias.text.primary}"
        }
      }
    }
  },
  "spacing": {
    "button": {
      "primary": {
        "padding": {
          "$type": "dimension",
          "$value": "{spacing.alias.md}"
        }
      },
      "secondary": {
        "padding": {
          "$type": "dimension",
          "$value": "{spacing.alias.md}"
        }
      }
    }
  }
}
