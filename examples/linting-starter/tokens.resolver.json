{
  "$schema": "https://www.designtokens.org/schemas/2025.10/resolver.json",
  "name": "Linting Starter - Dispersa",
  "version": "2025.10",
  "description": "Design tokens with intentional lint issues for testing",
  "sets": {
    "colors": {
      "description": "Color palette and alias colors",
      "sources": [{ "$ref": "./tokens/base/colors.json" }, { "$ref": "./tokens/alias/colors.json" }]
    },
    "components": {
      "description": "Component tokens referencing semantic aliases",
      "sources": [{ "$ref": "./tokens/alias/components/button.json" }]
    },
    "typography": {
      "description": "Font families, sizes, weights, and line heights",
      "sources": [{ "$ref": "./tokens/base/typography.json" }]
    },
    "spacing": {
      "description": "Spacing scale",
      "sources": [
        { "$ref": "./tokens/base/spacing.json" },
        { "$ref": "./tokens/alias/spacing.json" }
      ]
    },
    "effects": {
      "description": "Shadows and elevation",
      "sources": [{ "$ref": "./tokens/base/effects.json" }]
    }
  },
  "modifiers": {
    "theme": {
      "description": "Theme variations",
      "default": "light",
      "contexts": {
        "light": [{ "$ref": "./tokens/themes/light.json" }],
        "dark": [{ "$ref": "./tokens/themes/dark.json" }]
      }
    }
  },
  "resolutionOrder": [
    { "$ref": "#/sets/colors" },
    { "$ref": "#/sets/typography" },
    { "$ref": "#/sets/spacing" },
    { "$ref": "#/sets/effects" },
    { "$ref": "#/sets/components" },
    { "$ref": "#/modifiers/theme" }
  ]
}
